# Server Configuration
PORT=3001

# MongoDB
MONGODB_URI=mongodb://localhost:27017/ai-photo-transform
# For production (MongoDB Atlas):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/ai-photo-transform

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# N8N Webhook URL
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/process-image

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback
# For production:
# GOOGLE_CALLBACK_URL=https://your-backend-url.com/api/auth/google/callback

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Session Secret
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Frontend URL
FRONTEND_URL=http://localhost:5173
# For production:
# FRONTEND_URL=https://your-frontend-url.com

# Email Configuration
# Options: 'gmail' or 'custom'
EMAIL_SERVICE=gmail
# For Gmail: use App Password (not regular password)
# Create at: https://myaccount.google.com/apppasswords
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com

# For Custom SMTP (if using custom email service):
# EMAIL_SERVICE=custom
# EMAIL_HOST=smtp.turkticaret.net
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=info@photo-transform.com
# EMAIL_PASSWORD=*j8&q1Bep+Hm
# EMAIL_FROM=info@photo-transform.com

# Environment
NODE_ENV=development
